<StartScreen>:
    BoxLayout:
        padding: 3
        spacing: 3
        canvas.before:
            Color:
                rgba: .1, .3, .6, .6
            Rectangle:
                size: self.size
                pos: self.pos
        orientation: "vertical"
        BoxLayout:
            padding: 5
            spacing: 5
            size_hint_y: 0.1
            Button:
                id: btn_usb_cam
                text: 'USB Camera'
                on_release: root.on_btn_usb()
            Button:
                id: btn_local_video
                text: 'Local Video'
                on_release: root.on_btn_video()
            Button:
                id: btn_start
                text: 'Start'
                on_release: root.on_btn_start()
            Button:
                id: btn_stop
                text: 'Stop'
                on_release: root.on_btn_stop()
        BoxLayout:
            size_hint_y: 0.05
            TextInput:
                id: txt_path
                text: "./"
                font_size: 15
                size_hint: .9, 1.

        BoxLayout
            size_hint_y: 0.85
            Image:
                id: shower
                allow_stretch: True
                animation_offset: .1
                size: self.size